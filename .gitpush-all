#!/bin/bash
# Script để push cả backend và frontend từ root
# Usage: ./.gitpush-all "commit message"

# Kiểm tra xem có thay đổi không
if git diff --quiet && git diff --cached --quiet; then
    echo "No changes to commit"
    exit 0
fi

# Add tất cả
git add .

# Commit với message
if [ -z "$1" ]; then
    git commit -m "Update project"
else
    git commit -m "$1"
fi

# Push
git push

echo "✅ All code (backend + frontend) pushed successfully!"

