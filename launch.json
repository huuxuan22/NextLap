{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: FastAPI (Uvicorn)",
        "type": "python",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "main:app",
          "--reload",
          "--host",
          "127.0.0.1",
          "--port",
          "8000"
        ],
        "jinja": true,
        "justMyCode": false,
        "cwd": "${workspaceFolder}/backend",
        "envFile": "${workspaceFolder}/backend/.env",
        "console": "integratedTerminal",
        "python": "${workspaceFolder}/backend/venv/Scripts/python.exe"
      },
      {
        "name": "Python: FastAPI (Debug Mode)",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/backend/main.py",
        "module": "uvicorn",
        "args": [
          "main:app",
          "--reload",
          "--host",
          "127.0.0.1",
          "--port",
          "8000"
        ],
        "jinja": true,
        "justMyCode": false,
        "cwd": "${workspaceFolder}/backend",
        "envFile": "${workspaceFolder}/backend/.env",
        "console": "integratedTerminal",
        "python": "${workspaceFolder}/backend/venv/Scripts/python.exe",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/backend"
        }
      }
    ]
  }